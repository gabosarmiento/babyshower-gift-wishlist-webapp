<div class="container" id="tiendas-container">
  <h3>Directorio</h3>
  <span class="help-block">Ayúdanos a construir un mejor directorio.</span>
  <div class="col-lg-12">
    <% if policy(Tienda.new).create? %>
    <div>
      <%= link_to "añade una tienda", new_tienda_path, class: "btn btn-md btn-primary" %>
    </div>
    <% end %>
    <div class="tiendas table-responsive">
      <table class="table table-striped">
        <thead>
          <th width="200">Nombre</th>
          <th>Acerca De La Tienda</th>
          <th>Dirección al portal</th>
          <th>Locación</th>
        </thead>
        <tbody>
           <% @tiendas.each do |tienda| %>
            <tr><td><%= link_to tienda.nombre, tienda %></td><td><%= simple_format(tienda.acerca_de) %></td><td><%= link_to tienda.url, tienda.url %></td><td><%= tienda.locacion %></td></tr>
             <% end %>
        </tbody>
      </table>
      <div class="pagination_como_digg">
        <%= will_paginate @tiendas , renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>