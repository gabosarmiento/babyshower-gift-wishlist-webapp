 <% unless regalo.compromiso.nil? %>
  <div class="regalo-<%= regalo.id %>">
    <div>
    <span>
      <%= image_tag(regalo.imagen.thumb.url) if regalo.imagen? %>
    </span> 
    <span>
      <%= regalo.titulo.to_s.humanize.titleize%>
    </span> 
    </div>
    <div class="controles">
    <% case regalo.compromiso.value %>
    <% when "disponible" %>
    <span>
      <%= link_to "comprar", fiesta_lista_regalo_comprar_path(fiesta, lista, regalo), class: "btn btn-default btn-md" %>
    </span>
    <span>
      <%= link_to "reservar", fiesta_lista_regalo_reservar_path(fiesta, lista, regalo), class: "btn btn-default btn-md" %>
    </span>
    <% if policy(regalo).destroy? %>
    <span>
      <%= link_to "eliminar de la lista", fiesta_lista_regalo_compromiso_path(fiesta, lista, regalo, regalo.compromiso), method: :delete, class: "btn btn-default btn-md" %>
    </span>
    <% end %>
    <% when "reservado" %>
    <span>
      <%= link_to "liberar", fiesta_lista_regalo_liberar_path(fiesta, lista, regalo), class: "btn btn-default btn-md" %>
    </span>
    <span>
      <%= link_to "comprar", fiesta_lista_regalo_comprar_path(fiesta, lista, regalo), class: "btn btn-default btn-md" %>
    </span>
    <% when "comprado" %>
      <span>
      <%= link_to "liberar", fiesta_lista_regalo_liberar_path(fiesta, lista, regalo), class: "btn btn-default btn-md" %>
      </span>
    <% end %>
    </div><!-- /controles-->
  </div><!-- /regalo-->
  <!-- /controles-->
  <% else %>
  <% if policy(lista).edit? %>
  <div class="regalo-<%= regalo.id %>">
    <div>
    <span>
      <%= image_tag(regalo.imagen.thumb.url) if regalo.imagen? %>
    </span> 
    <span>
      <%= regalo.titulo.to_s.humanize.titleize%>
    </span> 
    </div>
    <div class="controles">
      <span>
      <%= link_to "publicar en la lista", fiesta_lista_regalo_liberar_path(fiesta, lista, regalo), class: "btn btn-default btn-md" %>
      </span>
    </div>
  </div>
  <% end %>
<% end %>