<div class="container" id="fiestas-container">
  <div class="row">
    <!-- Fiestas a las que te invitan -->
    <div class="col-sm-12">
      <div class="well">
      <h3>Próximas fiestas <span class="badge badge-info"><%= @invitaciones_ids.count if @invitaciones_ids %></span></h3>
      <span class="help-block">
        Fiestas en las que esperan tu presencia.
      </span>
      </div>
      <% unless @invitaciones_ids.empty? %>
        <% @invitaciones_ids.each do |id| %>
        <div id="invitacion-<%= id %>" class="lista-fiestas">
          <span><small><strong>[<%= Fiesta.find(id).fecha %>]</strong></small></span>
          <span><%= link_to Fiesta.find(id).nombre, fiesta_path(Fiesta.find(id)) %></span>
          <span><small>Invitado por: <%= Fiesta.find(id).users.first.email %></small></span>
        </div>
        <% end %>
      <% else %>
        Algún día te sorprenderá. No pierdas la fe. Ya llegará!
      <% end %>
    </div>

  </div>
</div>
